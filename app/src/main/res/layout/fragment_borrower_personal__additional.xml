                    android:textSize="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PAN applied" />

                <Spinner
                    android:id="@+id/spinFORM60_PAN_APPLIED_YN"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <LinearLayout
